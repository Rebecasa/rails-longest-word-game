<div class="container">
<h1>New Game</h1>
<ul><% @letters.each do |letter| %>
<li><%=letter%></li>
<% end %>
</ul>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="form-input" type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit">
</form>
</div>
